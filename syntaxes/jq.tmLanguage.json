{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "jq",
  "fileTypes": ["jq"],
  "patterns": [
    {
      "include": "#command"
    },
    {
      "include": "#json"
    },
    {
      "include": "#comment"
    },
    {
      "include": "#main"
    }
  ],
  "repository": {
    "command": {
      "patterns": [
        {
          "begin": "(^jq)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.class"
            }
          },
          "patterns": [
            {
              "include": "#main__1"
            }
          ],
          "end": "(.*[^\\\\\\s]$)",
          "endCaptures": {
            "1": {
              "patterns": [
                {
                  "include": "#main__1"
                }
              ]
            }
          }
        }
      ]
    },
    "main__1": {
      "patterns": [
        {
          "match": "(if|then|else|elif|end)",
          "name": "entity.name.type"
        },
        {
          "match": "([a-z_]+\\()([^\\)]+)(\\))",
          "captures" : {
            "1" : {
              "name": "entity.name.function"
            },
            "2" : {
              "name" : "entity.name.tag"
            },
            "3" : {
              "name": "entity.name.function"
            }
          }
        },
        {
          "match": "([a-z]+)",
          "name": "entity.name.tag"
        },
        {
          "match": "([0-9]+)",
          "name": "entity.name.function"
        },
        {
          "match": "([^a-z])",
          "name": "entity.name.tag"
        }
      ]
    },
    "json": {
      "begin": "^[\\{|\\[]",
      "end": "[\\}|\\]]$",
      "name": "source.json",
      "patterns": [
        {
          "include": "source.json"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "match": "^#.*",
          "name": "comment"
        }
      ]
    }
  },
  "scopeName": "source.jq"
}
